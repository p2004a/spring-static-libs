prefix=/build
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include
supported_protocols="HTTP HTTPS WS WSS"
supported_features="alt-svc AsynchDNS HSTS HTTP2 HTTPS-proxy IPv6 Largefile libz PSL SSL threadsafe"

Name: libcurl
URL: https://curl.se/
Description: Library to transfer files with HTTP, FTP, etc.
Version: 8.15.0
Requires: zlib,openssl,libpsl,libnghttp2
Requires.private: zlib,openssl,libpsl,libnghttp2
Libs: -L${libdir} -lcurl -lnghttp2 -lpsl -lssl -lcrypto -lz  -ldl -lpthread -pthread
Libs.private: -L/build/lib -L/build/lib -lnghttp2 -lpsl -lssl -lcrypto -lz -ldl -lpthread -pthread
Cflags: -I${includedir} -DCURL_STATICLIB
Cflags.private: -DCURL_STATICLIB
